<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="9dp"
    android:orientation="vertical"
    tools:context=".view.dialog.TestInstructionsDailog">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        android:layout_margin="6dp"
        app:cardCornerRadius="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="15dp"
                android:text="@string/txt_instructions_for_test"
                android:textAlignment="center"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:text="@string/txt_various_versions_have_evolved_over_the_years_sometimes_by_accident_sometimes_on_purpose_injected_humour_and_the_like"
                android:textColor="@color/colorText"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:text="@string/txt_choose_your_default_language"
                android:textColor="@color/colorRed"
                android:textSize="14sp"
                android:textStyle="bold" />


            <Spinner
                android:id="@+id/langType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dropDownVerticalOffset="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_spinner"
                tools:ignore="UnusedAttribute" />



            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="25dp"
                android:gravity="top"
                android:buttonTint="@color/colorPrimary"
                android:drawableTint="@color/colorPrimary"
                android:textColor="@color/colorText"
                android:text="@string/txt_i_ve_read_all_the_instructions_carefully" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-26dp"
        android:background="@drawable/button_bg_with_stroke_10"
        android:foreground="?attr/selectableItemBackground"
        android:paddingStart="40dp"
        android:paddingTop="10dp"
        android:paddingEnd="39dp"
        android:paddingBottom="10dp"
        android:text="@string/txt_start_test"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />



</LinearLayout>