<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
<variable
    name="model"
    type="com.cmt.model.ProfileMenuModel" />
    </data>

    <RelativeLayout
        android:id="@+id/menuItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackgroundBorderless"
        android:paddingBottom="12dp"
        >
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/hint_image"
            tools:src="@drawable/my_courses"
            android:layout_centerVertical="true"
            bind:drawableImage="@{model.icon}"
            android:padding="4dp"
            android:layout_marginEnd="20dp"/>
        <TextView
            android:id="@+id/menuItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/menuIcon"
            tools:text="@string/txt_my_course"
            android:text="@{model.name}"
            android:layout_centerVertical="true"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="13sp"
            app:autoSizeTextType="uniform"
            app:drawableEndCompat="@drawable/ic_arrow_right"
            app:drawableTint="#3E3A3A" />

    </RelativeLayout>
</layout>