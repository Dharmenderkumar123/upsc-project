<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.cmt.services.model.SubCourseModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardElevation="3dp"
        app:cardBackgroundColor="@color/colorWhite"
        bind:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15sp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/hint_image"
                android:src="@drawable/pride_ias_logo" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/image"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{model.sub_category_name}"
                app:autoSizeMaxTextSize="16sp"
                app:autoSizeMinTextSize="13sp"
                app:autoSizeTextType="uniform"
                tools:text="Diploma in Agriculture" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</layout>