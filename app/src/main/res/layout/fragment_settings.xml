<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.cmt.viewModel.fragment.SettingsVM" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            tools:context=".view.fragment.SettingsFragment">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="43dp"
                android:background="@drawable/bg_edit_10dp"
                android:imeOptions="actionNext"
                android:padding="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/oldPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/eye1"
                    android:background="@null"
                    android:drawableStart="@drawable/password"
                    android:drawablePadding="10dp"
                    android:ellipsize="middle"
                    android:gravity="center_vertical"
                    android:hint="@string/txt_old_password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:text="@={viewModel.passwordData.current_password}"
                    android:textColorHint="@color/colorEditTextHint"
                    android:textSize="13sp"
                    tools:ignore="UnusedAttribute" />

                <ImageView
                    android:id="@+id/eye1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:contentDescription="@string/app_name"
                    android:focusable="true"
                    android:onClick="@{()->viewModel.visiblePassword1()}"
                    android:scaleType="centerCrop"
                    android:src="@drawable/eye"
                    app:tint="@color/colorEditTextHint" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_edit_10dp"
                android:imeOptions="actionNext"
                android:padding="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/newPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/eye2"
                    android:background="@null"
                    android:drawableStart="@drawable/password"
                    android:drawablePadding="10dp"
                    android:ellipsize="middle"
                    android:gravity="center_vertical"
                    android:hint="@string/txt_new_password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:text="@={viewModel.passwordData.new_password}"
                    android:textColorHint="@color/colorEditTextHint"
                    android:textSize="13sp"
                    tools:ignore="UnusedAttribute" />

                <ImageView
                    android:id="@+id/eye2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:contentDescription="@string/app_name"
                    android:focusable="true"
                    android:onClick="@{()->viewModel.visiblePassword2()}"
                    android:scaleType="centerCrop"
                    android:src="@drawable/eye"
                    app:tint="@color/colorEditTextHint" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_edit_10dp"
                android:imeOptions="actionNext"
                android:padding="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reTypePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/eye3"
                    android:background="@null"
                    android:drawableStart="@drawable/password"
                    android:drawablePadding="10dp"
                    android:ellipsize="middle"
                    android:gravity="center_vertical"
                    android:hint="@string/txt_retype_password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:text="@={viewModel.passwordData.re_enter_password}"
                    android:textColorHint="@color/colorEditTextHint"
                    android:textSize="13sp"
                    tools:ignore="UnusedAttribute" />

                <ImageView
                    android:id="@+id/eye3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:contentDescription="@string/app_name"
                    android:focusable="true"
                    android:onClick="@{()->viewModel.visiblePassword3()}"
                    android:scaleType="centerCrop"
                    android:src="@drawable/eye"
                    app:tint="@color/colorEditTextHint" />

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_button"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackgroundBorderless"
                android:onClick="@{viewModel::updatePassword}"
                android:padding="16sp"
                android:paddingStart="60dp"
                android:paddingTop="13dp"
                android:paddingEnd="60dp"
                android:paddingBottom="12dp"
                android:text="@string/txt_continue"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>