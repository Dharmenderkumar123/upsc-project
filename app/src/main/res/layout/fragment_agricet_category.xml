<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.cmt.viewModel.fragment.AgricetVM" />

        <variable
            name="model"
            type="com.cmt.services.model.SubjectsListModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.AgricetCategoryFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:spanCount="1"
            tools:listitem="@layout/items_agricet" />

        <RelativeLayout
            android:id="@+id/layoutPrices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-1dp"
            android:background="@color/colorTheme"
            android:paddingStart="27dp"
            android:paddingTop="10dp"
            android:paddingEnd="23dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:visibility="gone"
                android:text="@{model.price}"
                android:textColor="@color/colorWhite"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/tvActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/amount"
                android:background="@drawable/drawable_strike"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:visibility="gone"
                android:text="@{model.actual_price}"
                android:textColor="@color/colorWhite"
                android:textSize="19sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buyNowBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_edit_10dp"
                android:backgroundTint="@color/colorPrimary"
                android:foreground="?selectableItemBackgroundBorderless"
                android:onClick="@{viewModel::createOrderId}"
                android:padding="5dp"
                android:text="@string/txt_buy_now"
                android:textAllCaps="false"
                android:textSize="15sp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tvNoSubj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/no_subjects_available"
            android:textColor="@color/colorEditTextHint"
            android:textSize="16sp"
            android:visibility="gone" />
    </RelativeLayout>
</layout>