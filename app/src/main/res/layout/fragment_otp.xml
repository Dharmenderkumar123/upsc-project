<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.cmt.viewModel.fragment.OtpVM" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingTop="30dp"
            android:paddingEnd="25dp"
            android:paddingBottom="20dp"
            tools:context=".view.fragment.OtpFragment">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/txt_verify_account"
                android:textColor="@color/colourDarkBlue"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:maxLines="2"
                android:text="@string/txt_please_fill_verification_code"
                android:textColor="@color/colorEditTextHint"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/ll_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_otp1"
                    android:layout_width="55dp"
                    android:layout_height="73dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_25"
                    android:cursorVisible="true"
                    android:digits="1234567890"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorText"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="20sp"
                    app:addTextChangedListener="@{viewModel.otp1TextChange}" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_otp2"
                    android:layout_width="55dp"
                    android:layout_height="73dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_25"
                    android:cursorVisible="true"
                    android:digits="1234567890"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorText"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="20sp"
                    app:addTextChangedListener="@{viewModel.otp2TextChange}" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_otp3"
                    android:layout_width="55dp"
                    android:layout_height="73dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_25"
                    android:cursorVisible="true"
                    android:digits="1234567890"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorText"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="20sp"
                    app:addTextChangedListener="@{viewModel.otp3TextChange}" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_otp4"
                    android:layout_width="55dp"
                    android:layout_height="73dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_25"
                    android:cursorVisible="true"
                    android:digits="1234567890"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorText"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="20sp"
                    app:addTextChangedListener="@{viewModel.otp4TextChange}" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:padding="3dp"
                android:text="@string/txt_didn_t_receive_a_code"
                android:textColor="@color/colorEditTextHint"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_resend1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="11dp"
                android:padding="5dp"
                android:text="@string/txt_resend"
                android:textStyle="bold"
                android:onClick="@{viewModel::resend}"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/continueBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_edit_10dp"
                android:backgroundTint="@color/colorTheme"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackgroundBorderless"
                android:onClick="@{viewModel::continueButton}"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/txt_continue"
                android:textAllCaps="false"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                tools:ignore="UnusedAttribute" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>