<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.cmt.viewModel.activity.PdfActivityVM" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        tools:context=".view.activity.PdfActivity">
        <LinearLayout
            android:id="@+id/lockLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:elevation="10dp"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/lock_ic"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTheme"
            android:elevation="2dp"
            android:padding="15dp">

            <ImageView
                android:id="@+id/backNav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/backnav_bg"
                android:backgroundTint="@color/colorPrimary"
                android:contentDescription="@string/hint_image"
                android:foreground="?selectableItemBackgroundBorderless"
                android:onClick="@{viewModel::backEvent}"
                android:padding="10dp"
                android:src="@drawable/ic_arrow"
                tools:ignore="UnusedAttribute"
                app:tint="@android:color/black" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/backNav"
                android:textColor="@android:color/black"
                android:textSize="16sp" />


        </RelativeLayout>

        <FrameLayout
            android:id="@+id/pdfContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_layout_top_corners"
            android:backgroundTint="@android:color/white"
            android:padding="10dp"
            android:visibility="gone" />

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolBar"
            android:visibility="gone" />



        <com.rajat.pdfviewer.PdfRendererView
            android:id="@+id/pdfView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolBar"
            android:scrollbarSize="10dp"
            android:fastScrollEnabled="true"
            android:fastScrollStyle="@style/ThickScrollBar"
            android:scrollbars="vertical"
            android:scrollbarThumbVertical="@android:color/darker_gray"
            app:pdfView_divider="@drawable/pdf_viewer_divider"
            app:pdfView_showDivider="false" />


        <com.cmt.helper.VerticalSeekBar
            android:id="@+id/customScrollbar"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_below="@id/toolBar"
            android:layout_alignParentEnd="true"
            android:thumbOffset="0dp"
            android:splitTrack="false"
            android:progress="0"
            android:max="100" />


        <ProgressBar
            android:id="@+id/pbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />


    </RelativeLayout>
</layout>